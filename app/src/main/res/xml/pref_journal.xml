<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notification">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_activate_reminder_key"
        android:summaryOff="OFF"
        android:summaryOn="ACTIVE"
        android:title="@string/pref_activate_reminder_label"
        app:iconSpaceReserved="true" />

    <!-- add custom time picker for daily reminder  -->
    <com.example.android.videojournal.TimePreference
        android:key="key4"
        android:title="Pick Daily Reminder Time"
        android:summary="When to make daily entries"
        android:defaultValue="810"
        style="@style/AppPreference.DialogPreference"
        app:iconSpaceReserved="true"
        app:allowDividerAbove="false" />


</PreferenceCategory>

</PreferenceScreen>